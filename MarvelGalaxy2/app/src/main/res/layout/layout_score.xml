<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgScoreLayout"
        android:layout_width="328dp"
        android:layout_height="652dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="11dp"
        android:alpha="0.90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492"
        app:srcCompat="@drawable/img_scorelayout" />

    <TextView
        android:id="@+id/tvFinalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="244dp"
        android:fontFamily="@font/lora"
        android:gravity="center"
        android:text="000"
        android:textColor="@color/white"
        android:textSize="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgScoreLayout"
        app:layout_constraintEnd_toEndOf="@+id/imgScoreLayout"
        app:layout_constraintStart_toStartOf="@+id/imgScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/imgScoreLayout" />

    <TextView
        android:id="@+id/tvFinalTime"
        android:layout_width="98dp"
        android:layout_height="51dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="438dp"
        android:fontFamily="@font/optima"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgScoreLayout"
        app:layout_constraintEnd_toEndOf="@+id/imgScoreLayout"
        app:layout_constraintStart_toStartOf="@+id/imgScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/imgScoreLayout" />

    <TextView
        android:id="@+id/tvFinalTurn"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="438dp"
        android:fontFamily="@font/optima"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgScoreLayout"
        app:layout_constraintEnd_toEndOf="@+id/imgScoreLayout"
        app:layout_constraintStart_toStartOf="@+id/imgScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/imgScoreLayout" />

    <ImageView
        android:id="@+id/btnPlayAgain"
        android:layout_width="225dp"
        android:layout_height="74dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="592dp"
        android:layout_marginEnd="51dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgScoreLayout"
        app:layout_constraintEnd_toEndOf="@+id/imgScoreLayout"
        app:layout_constraintStart_toStartOf="@+id/imgScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/imgScoreLayout"
        app:srcCompat="@drawable/btn_playagain" />

    <ImageView
        android:id="@+id/btnIconNext"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_marginStart="269dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="67dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgScoreLayout"
        app:layout_constraintEnd_toEndOf="@+id/imgScoreLayout"
        app:layout_constraintStart_toStartOf="@+id/imgScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/imgScoreLayout"
        app:srcCompat="@drawable/btn_next" />

    <ImageView
        android:id="@+id/btnIconLeaderboard"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="67dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgScoreLayout"
        app:layout_constraintEnd_toEndOf="@+id/imgScoreLayout"
        app:layout_constraintStart_toStartOf="@+id/imgScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/imgScoreLayout"
        app:srcCompat="@drawable/btn_iconlb" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="94dp"
        android:layout_height="43dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="395dp"
        android:fontFamily="@font/optima"
        android:gravity="center"
        android:text="Username:"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgScoreLayout"
        app:layout_constraintEnd_toEndOf="@+id/imgScoreLayout"
        app:layout_constraintStart_toStartOf="@+id/imgScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/imgScoreLayout" />

    <EditText
        android:id="@+id/inputUsername"
        android:layout_width="123dp"
        android:layout_height="43dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="395dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/optima"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter username"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgScoreLayout"
        app:layout_constraintEnd_toEndOf="@+id/imgScoreLayout"
        app:layout_constraintStart_toStartOf="@+id/imgScoreLayout"
        app:layout_constraintTop_toTopOf="@+id/imgScoreLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>